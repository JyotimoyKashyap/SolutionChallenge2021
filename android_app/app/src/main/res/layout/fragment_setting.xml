<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainDestinations.Settings.SettingFragment">

    <TextView
        android:id="@+id/settings_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Settings"
        android:textSize="25dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/baby_account_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Baby Account"
        android:fontFamily="@font/poppins_regular"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:drawablePadding="12dp"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_title_text"/>
    <TextView
        android:id="@+id/logout_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_logout"
        app:layout_constraintTop_toBottomOf="@id/baby_account_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>